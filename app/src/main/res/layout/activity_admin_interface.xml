<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/butterfly"
    tools:context="com.example.admin.note_hub.admin_interface">


    <LinearLayout
        android:id="@+id/admin_txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/newround"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="ADMIN"
            android:textColor="#000"
            android:textSize="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/admin_txt"
        android:weightSum="2">


        <LinearLayout
            android:id="@+id/user_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:gravity="center"
            android:onClick="view_user"
            android:layout_margin="10dp"
            android:background="@drawable/round"
            android:orientation="vertical">


            <ImageView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/ic_users" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="VIEW USER"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="20dp"


                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/feedback_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:gravity="center"
            android:layout_below="@+id/admin_txt"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/user_txt"
            android:background="@drawable/newround"
            android:orientation="vertical"
            android:onClick="feedack_admin">


            <ImageView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/feedbck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="FEEDBACK"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="20dp"
               />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/admin_txt"
        android:weightSum="2">

    <LinearLayout
        android:id="@+id/logout_txt"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:background="@drawable/newround"
        android:orientation="vertical"
        android:gravity="center"
        android:onClick="report"
        >


        <ImageView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/report"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="REPORT"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20dp"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/notes_txt"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_below="@+id/user_txt"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/logout_txt"
        android:background="@drawable/round"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:onClick="notes">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/notes" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="NOTES"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20dp"
          />

    </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/admin_txt"
        android:weightSum="2">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_below="@+id/notes_txt"
        android:layout_margin="10dp"
        android:background="@drawable/round"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:onClick="logout_admin"
        >

        <ImageView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/lgt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="LOGOUT"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20dp"
            />
    </LinearLayout>


    </LinearLayout>
</LinearLayout>

